<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sanoy.mcm.edu.ph.example.inheritancerpg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".MageDisplay" />
        <activity android:name=".TankDisplay" />
        <activity android:name=".MarksDisplay" />
        <activity android:name=".SupportDisplay" />
        <activity android:name=".MonsterDisplay" />
        <activity android:name=".RogueDisplay" />
    </application>

</manifest>